<% provide(:title, t(".orders")) %>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <table width="100%" class="table table-bordered table-hover" id="datatable">
          <thead>
            <tr>
              <th><%= t ".stt" %></th>
              <th><%= t ".status" %></th>
              <th><%= t ".user" %></th>
              <th><%= t ".created_at" %></th>
              <th colspan="3"><%= t ".action" %></th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each_with_index do |order,index| %>
            <tr>
              <td><%= create_index params[:page], index, Settings.per_page %></td>
              <td><%= order.status %></td>
              <td><%= order.user_name %></td>
              <td><%= order.created_at %></td>
              <td>
                <%= link_to t(".detail"), admin_order_detail_path(order), class: "btn btn-success" %>
              </td>
              <td>
                <%= link_to t(".edit"), edit_admin_order_path(order), class: "btn btn-primary" %>
              </td>
              <td>
                <%= link_to t(".delete"), admin_order_path(order), method: :delete, data: {confirm: t(".confirm")}, class: "btn btn-danger" %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <%= paginate @orders %>
      </div>
    </div>
  </div>
</div>
